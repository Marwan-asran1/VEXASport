@model VEXA.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                <h2 class="mt-3">Order Confirmed!</h2>
                <p class="text-muted">Thank you for your order. Your order number is: <strong>@Model.OrderNumber</strong></p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Order Details</h5>
                    <table class="table">
                        <tr>
                            <th>Order Date:</th>
                            <td>@Model.OrderDate.ToString("g")</td>
                        </tr>
                        <tr>
                            <th>Order Status:</th>
                            <td><span class="badge bg-success">@Model.Status</span></td>
                        </tr>
                        <tr>
                            <th>Payment Method:</th>
                            <td>@Model.Method</td>
                        </tr>
                        <tr>
                            <th>Total Amount:</th>
                            <td>@Model.OrderTotal.ToString("C")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5>Delivery Information</h5>
                    <table class="table">
                        <tr>
                            <th>Shipping Address:</th>
                            <td>@Model.ShippingAddress</td>
                        </tr>
                        <tr>
                            <th>Billing Address:</th>
                            <td>@Model.BillingAddress</td>
                        </tr>
                        <tr>
                            <th>Contact Phone:</th>
                            <td>@Model.ContactPhone</td>
                        </tr>
                    </table>
                </div>
            </div>

            <h5 class="mt-4">Order Items</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice.ToString("C")</td>
                            <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a asp-action="MyOrders" class="btn btn-primary">View All Orders</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
            </div>
        </div>
    </div>
</div> 