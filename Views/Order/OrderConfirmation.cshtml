@model VEXA.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="order-confirmation-container">
    <div class="container">
        <h2 class="order-confirmation-title">Order Confirmation</h2>
        <div class="row">
            <div class="col-md-8">
                <div class="order-confirmation-card">
                    <div class="order-confirmation-header">
                        <i class="fas fa-check-circle order-confirmation-icon"></i>
                        <h2 class="order-confirmation-title-main">Order Confirmed!</h2>
                        <p class="order-confirmation-subtitle">Thank you for your order. Your order number is: <strong>@Model.OrderNumber</strong></p>
                    </div>
                    <div class="card-body">

                        <h5 class="order-details-title">Order Summary</h5>
                        <table class="table order-confirmation-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product?.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                @{
                                    var itemsSubtotal = Model.OrderItems?.Sum(i => i.UnitPrice * i.Quantity) ?? 0;
                                    var deliveryFee = 50.00m;
                                }
                                <tr class="subtotal-row">
                                    <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                    <td><strong>@itemsSubtotal.ToString("C")</strong></td>
                                </tr>
                                <tr class="delivery-row">
                                    <td colspan="3" class="text-end"><strong>Delivery Fee:</strong></td>
                                    <td><strong>@deliveryFee.ToString("C")</strong></td>
                                </tr>
                                <tr class="total-row">
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>@Model.OrderTotal.ToString("C")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="order-details-card">
                    <div class="order-details-header">
                        <h5 class="order-details-title">Order Details</h5>
                    </div>
                    <div class="order-details-content">
                        <table class="table order-details-table">
                            <tr>
                                <th>Order Date:</th>
                                <td>@Model.OrderDate.ToString("g")</td>
                            </tr>
                            <tr>
                                <th>Order Status:</th>
                                <td><span class="badge bg-success">@Model.Status</span></td>
                            </tr>
                            <tr>
                                <th>Payment Method:</th>
                                <td>@Model.Method</td>
                            </tr>
                        </table>
                    </div>
                </div>
                
                <div class="order-details-card" style="margin-top: 20px;">
                    <div class="order-details-header">
                        <h5 class="order-details-title">Delivery Information</h5>
                    </div>
                    <div class="order-details-content">
                        <table class="table order-details-table">
                            <tr>
                                <th>Shipping Address:</th>
                                <td>@Model.ShippingAddress</td>
                            </tr>
                            <tr>
                                <th>Billing Address:</th>
                                <td>@Model.BillingAddress</td>
                            </tr>
                            <tr>
                                <th>Contact Phone:</th>
                                <td>@Model.ContactPhone</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="order-actions">
            <a asp-action="MyOrders" class="order-action-btn">View All Orders</a>
            <a asp-controller="Home" asp-action="Index" class="order-action-btn secondary">Continue Shopping</a>
        </div>
    </div>
</div> 