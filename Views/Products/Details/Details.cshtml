
@model VEXA.Models.Product

<div class="product-details-container">
    <div class="product-image">
        <img src="~/@Model.ImageUrl" alt="@Model.Name" />
    </div>
    <div class="product-details">
        <div class="product-header">
            <h1>@Model.Name</h1>
            <p class="price">EGP @Model.Price</p>
        </div>
        <div class="product-description">
            <p>@Model.Description</p>
            <p><strong>Category:</strong> @(Model.Category?.Name ?? "Uncategorized")</p>
            <p><strong>In Stock:</strong> @Model.StockQuantity</p>
        </div>
        <form asp-action="AddToCart" asp-controller="Products" method="post">
